<div class="container">
  <h3 class="mb-3"> Quản trị bài viết </h3>

  <%= link_to "<button class='btn btn-success mb-3'> + Tạo bài viết</button>".html_safe, new_website_post_path(website_id: params[:website_id]) %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.order(id: :desc).map do |post| %>
        <tr>
          <th scope="row"><%= post.id %></th>
          <td><%= post.title %></td>
          <td>
            <%= link_to "<button class=\"btn btn-primary mr-3\">Edit</button>".html_safe, edit_website_post_path(website_id: params[:website_id], id: post.id) %>
            <button class="btn btn-danger">Delete</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
