<div class="container">
  <h3 class="mb-3"> Quản trị sản phẩm </h3>

  <%= link_to "<button class='btn btn-success mb-3'> + Tạo sản phẩm</button>".html_safe, new_website_product_path(website_id: params[:website_id]) %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.order(id: :desc).map do |product| %>
        <tr>
          <th scope="row"><%= product.id %></th>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td>
            <%= link_to "<button class=\"btn btn-primary mr-3\">Edit</button>".html_safe, edit_website_product_path(website_id: params[:website_id], id: product.id) %>
            <button class="btn btn-danger">Delete</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
