<div class="modal fade" id="modalPost" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(@category, url: website_categories_path) do |form| %>
        <div class="modal-body">
          <label>Tên category</label>
          <%= form.text_field :name, class: "form-control" %>
          <%= form.hidden_field :category_type, value: 'post', class: "form-control" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= form.submit "Tạo", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


