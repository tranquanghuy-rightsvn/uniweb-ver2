<div class="container">
  <h3>Post Categories</h3>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalPost"> + Tạo Category </button>
      <% @categories.select{|cate| cate.category_type == "post" }.map do |cate| %>
        <tr>
          <td><%= cate.name %></td>
          <td>
            <% unless cate.editable %>
              <button class="btn btn-danger">Delete</button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br><br><br>

