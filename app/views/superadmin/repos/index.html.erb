<div class="container">
  <h3 class="mb-3"> Quản trị repos</h3>
  <%= link_to "<button class='btn btn-success mb-3'> + Thêm repo</button>".html_safe, new_superadmin_repo_path %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Path</th>
        <th scope="col">Vercel Domain</th>
        <th scope="col">Status</th>
        <th scope="col">User Email</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @repos.order(id: :desc).map do |repo| %>
        <tr>
          <th scope="row"><%= repo.path %></th>
          <td>
            <%= repo.vercel_domain %>
          </td>
          <td><%= repo_status repo.is_available %></td>
          <td><%= repo.website&.name %></td>
          <td>
            <%= link_to "<button class='btn btn-warning'>Sửa</button>".html_safe, edit_superadmin_repo_path(repo.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
