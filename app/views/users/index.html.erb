<div class="container">
  <h3 class="mb-3"> Những người quản lý trang</h3>

  <%= link_to "<button class='btn btn-success mb-3'> + Thêm người quản lý</button>".html_safe, new_website_user_path(website_id: params[:website_id]) %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.order(id: :desc).map do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.email %></td>
          <td><%= user.role_in_website(params[:website_id]) %></td>
          <td>
            <button class="btn btn-danger">Delete</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
